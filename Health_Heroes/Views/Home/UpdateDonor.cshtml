    }

    /* Style for the logout button */
    .logout-btn {
        position: fixed;
        top: 20px;
        right: 30px;
        background-color: transparent;
        border: none;
        cursor: pointer;
        font-size: 24px;
        color: black;
        z-index: 1000;
    }

        .logout-btn i {
            font-size: 30px;
        }

        .logout-btn:hover i {
            color: #333;
        }
</style>
